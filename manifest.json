{
    "manifest_version": 2,
    "name": "Script Runner",
    "description": "A place to store and run scripts",
    "version": "1.0",
    "content_scripts": [
        {
            "matches": [
                "https://localhost:52161/swagger/index.html"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "permissions": [
        "activeTab",
        "storage",
        "https://ajax.googleapis.com/"
    ]
}